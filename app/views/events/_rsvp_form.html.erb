<% if current_user then %>
  <% @rsvp.available_events.each do |eventname|%>
    <%= inline_form_for(@rsvp) do |f|  %>
      <%= hidden_field_tag "rsvp[event]", eventname  %>
      <%= f.submit t(eventname, :scope => 'activerecord.values.rsvp.answer'), :name => "", :class => ''  %>
    <% end  %>
  <% end  %>
<% end  %>
