<%- model_class = Event -%>

<%= render "intro" %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:starts) %>:</strong></dt>
  <dd><%= @event.starts %></dd>

  <% if ! @event.ends.nil? %>
    <dt><strong><%= model_class.human_attribute_name(:ends) %>:</strong></dt>
    <dd><%= @event.ends %></dd>
  <% end %>

  <dt><strong><%= model_class.human_attribute_name(:venue) %>:</strong></dt>
  <dd><%= @event.venue %></dd>
</dl>

<% if user_signed_in? %>

  <div class="form-actions">
    <%= link_to t(:back), events_path, :class => 'btn'  %>
    <%= link_to t(:edit), edit_event_path(@event), :class => 'btn' %>
    <%= link_to t(:destroy), event_path(@event),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>

<% end %>
